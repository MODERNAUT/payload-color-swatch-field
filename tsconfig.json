{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "types": [
      "node"
    ],
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
			// "payload-color-swatch-field/client": [
      //   "./packages/plugin-seo/src/exports/client.ts"
      // ]
    },
		"composite": true, // Make sure typescript knows that this module depends on their references
    "noEmit": false /* Do not emit outputs. */,
    "emitDeclarationOnly": true,
    "outDir": "./dist" /* Specify an output folder for all emitted files. */,
    "rootDir": "./src", /* Specify the root folder within your source files. */
    "jsx": "react-jsx"
  },
  "exclude": [
    "dist",
    "build",
    "tests",
    "test",
    "node_modules",
    "eslint.config.js",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "composite": true,
  "include": [
    "app",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "scripts/**/*.ts",
    "instrumentation.ts",
    "sentry.server.config.ts",
    "sentry.client.config.ts",
		"src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/**/*.json"
  ]
}